# Backend Environment Variables
# Copy this file to .env and fill in your values

PORT=8000
NODE_ENV=development

# MongoDB Connection
MONGODB_URL=your_mongodb_connection_string

# JWT Secret (use a strong random string)
JWT_SECRET=your_jwt_secret_here

# Email Configuration (for sending OTPs)
EMAIL=your_email@gmail.com
PASS=your_app_password

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Razorpay Configuration (for payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Client Origins (comma-separated list of allowed frontend URLs)
# Local: http://localhost:5173
# Production: https://your-frontend-domain.vercel.app
CLIENT_ORIGINS=http://localhost:5173,https://your-frontend-domain.vercel.app